<!-- Wappler include fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="login" appConnect="local" components="{dmxNotifications:{}}" -->
<meta name="ac:route" content="/login">
<dmx-notifications id="notifies1"></dmx-notifications>
<div class="container">
    <form id="login" method="post" is="dmx-serverconnect-form" action="/api/login" dmx-on:success="notifies1.success('Login efetuado com sucesso')" dmx-on:error="notifies1.danger('Algo deu errado, entre em contato conosco!')" dmx-on:unauthorized="notifies1.danger('E-mail ou senha invÃ¡lidos')">
        <div class="row">
            <div class="col-12 col-md-8 col-lg-7 col-xl-5 text-start">
                <div class="row">
                    <div class="col">
                        <h1 class="text-center">Entrar</h1>
                        <p class="text-h3 text-center">Entre com seus detalhes de acesso abaixo</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col mt-4">
                        <input type="email" id="inp_email" name="email" class="form-control" placeholder="Email">
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col">
                        <input type="password" id="inp_senha" name="senha" class="form-control" placeholder="Password">
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-5">
                        <button id="login1_submit" class="btn btn-primary w-100" type="submit" dmx-hide="state.executing">Entrar&nbsp;</button>
                        <button id="login1_submit1" class="btn btn-primary w-100" type="submit" dmx-show="state.executing">Entrando&nbsp;
                            <span class="spinner-border spinner-border-sm" role="status"></span></button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>